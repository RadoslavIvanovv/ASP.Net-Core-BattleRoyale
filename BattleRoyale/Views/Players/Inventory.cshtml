
@model PlayerInventoryViewModel

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Items in Inventory</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Item Name</th>
                        <th scope="col">Stats</th>
                        <th scope="col">Price</th>
                        <th scope="col">Item Type</th>
                        <th scope="col">Item For</th>
                        <th scope="col">Auction Item</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model.BoughtItems)
                        {
                    <tr>
                        <th scope="row">@item.Name</th>
                        <td>@item.Stats</td>
                        <td>@item.Price</td>
                        <td>@item.ItemType</td>
                        <td>@item.HeroType</td>
                        <td>
                            <div class="button-holder">
                                <a href="/Auction/Add?itemId=@item.Id" class="btn btn-info text-uppercase">Auction Item</a>
                            </div>
                        </td>
                    </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>
