@model AddPetFormModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Pet</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Insert Pet Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">

                    <option value="Tiger">Tiger - Attack</option>
                    <option value="Frog">Frog - Magic Attack</option>
                    <option value="Elephant">Elephant - Health</option>
                    <option value="Armadillo">Armadillo - Armor</option>
                    <option value="Turtle">Turtle - Magic Resistance</option>
                    <option value="Cheetah">Cheetah - Speed</option>

                </select>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>