    {
        var userId = User.GetId();
        var userIsAdmin = User.IsAdmin();

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Heroes" asp-action="Add">Add Hero</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Heroes" asp-action="All">All Heroes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="Inventory">Inventory</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="Info">Player</a>
        </li>
       @if (userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Shops" asp-action="Add">Add Item</a>
            </li>
        }
        <li class="nav-item">
