@model FightingHeroesViewModel


<form>
    <div class="form-group row">
        <img src="@Model.Attacker.ImageUrl" class="rounded float-md-left" width="100" height="100" alt="Computer Hope">
        <label for="staticEmail" class="col-sm-2 col-form-label">@Model.Attacker.Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Attacker.RemainingArmor/@Model.Attacker.MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Attacker.RemainingMagicResistance/@Model.Attacker.MaxMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Attacker.RemainingHealth/@Model.Attacker.MaxHealth">
        </div>
    </div>
</form>


<img src="https://image.freepik.com/free-vector/versus-vs-logo-battle-headline-template-sparkling-lightning-design_159025-56.jpg" class="rounded float-md-none" width="100" height="100" alt="Computer Hope">
<div class="button-holder">
    <a href="/BattleArena/Fight" class="btn btn-primary">Attack</a>
</div>
@if (Model.Attacker.RemainingHealth <= 0 || Model.Defender.RemainingHealth <= 0)
{
    <div class="button-holder">
        <a href="/BattleArena/EndFight?heroId=@Model.Attacker" class="btn btn-primary">EndFight</a>
    </div>
}




<form>
    <div class="form-group row">
        <img src="@Model.Defender.ImageUrl" class="rounded float-md-right" width="100" height="100" alt="Computer Hope">
        <label for="staticEmail" class="col-sm-2 col-form-label">@Model.Defender.Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Defender.RemainingArmor/@Model.Defender.MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Defender.RemainingMagicResistance/@Model.Defender.MaxMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Defender.RemainingHealth/@Model.Defender.MaxHealth">
        </div>
    </div>
</form>
