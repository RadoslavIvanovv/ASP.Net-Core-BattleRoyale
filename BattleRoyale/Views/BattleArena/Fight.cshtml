        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Heroes[1].RemainingArmor/@Model.Heroes[1].MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Heroes[1].RemainingMagicResistance/@Model.Heroes[1].MaxMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.Heroes[1].RemainingHealth/@Model.Heroes[1].MaxHealth">
        </div>
    </div>
</form>
