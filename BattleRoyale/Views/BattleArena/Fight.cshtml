@model FightingHeroesViewModel

@{
    var hero = new HeroFightViewModel
    {
        ImageUrl = "http://keyword-hero.com/wp-content/uploads/2017/04/Cart-Hero.png",
        Name = "Gosho",
        RemainingArmor = 30,
        MaxArmor = 30,
        RemainingMagicResistance = 30,
        MaxMagicResistance = 30,
        RemainingHealth = 30,
        MaxHealth = 30,
    };

    var hero2 = new HeroFightViewModel
    {
        ImageUrl = "http://keyword-hero.com/wp-content/uploads/2017/04/Cart-Hero.png",
        Name = "Sharo",
        RemainingArmor = 20,
        MaxArmor = 40,
        RemainingMagicResistance = 30,
        MaxMagicResistance = 50,
        RemainingHealth = 10,
        MaxHealth = 20,
    };
}
<form>
    <div class="form-group row">
        <img src="@hero.ImageUrl" class="rounded float-md-left" width="100" height="100" alt="Computer Hope">
        <label for="staticEmail" class="col-sm-2 col-form-label">@hero.Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@hero.RemainingArmor/@hero.MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@hero.RemainingMagicResistance/@hero.RemainingMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@hero.RemainingHealth/@hero.RemainingHealth">
        </div>
    </div>
</form>

<img src="https://image.freepik.com/free-vector/versus-vs-logo-battle-headline-template-sparkling-lightning-design_159025-56.jpg" class="rounded float-md-none" width="100" height="100" alt="Computer Hope">
<a asp-controller="BattleArena" asp-action="Fight" class="btn btn-primary">Attack</a>




<form>
    <div class="form-group row">
        <img src="@hero2.ImageUrl" class="rounded float-md-right" width="100" height="100" alt="Computer Hope">
        <label for="staticEmail" class="col-sm-2 col-form-label">@hero2.Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@hero2.RemainingArmor/@hero2.MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@hero2.RemainingMagicResistance/@hero2.RemainingMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@hero2.RemainingHealth/@hero2.RemainingHealth">
        </div>
    </div>
</form>