@model FightingHeroesViewModel


<form>
    <div class="form-group row">
        <img src="@Model.Heroes[0].ImageUrl" class="rounded float-md-left" width="100" height="100" alt="Computer Hope">
        <label for="staticEmail" class="col-sm-2 col-form-label">@Model.Heroes[0].Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Heroes[0].RemainingArmor/@Model.Heroes[0].MaxArmor">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Heroes[0].RemainingMagicResistance/@Model.Heroes[0].MaxMagicResistance">
        </div>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Heroes[0].RemainingHealth/@Model.Heroes[0].MaxHealth">
        </div>
    </div>
</form>


<img src="https://image.freepik.com/free-vector/versus-vs-logo-battle-headline-template-sparkling-lightning-design_159025-56.jpg" class="rounded float-md-none" width="100" height="100" alt="Computer Hope">
<div class="button-holder">
    <a class="btn btn-primary">Attack</a>
</div>
<div class="button-holder">
    <a href="/BattleArena/EndFight?heroId=@Model.Heroes[0].Id" class="btn btn-primary">EndFight</a>
</div>



<form>
    <div class="form-group row">
        <img src="@Model.Heroes[1].ImageUrl" class="rounded float-md-right" width="100" height="100" alt="Computer Hope">
