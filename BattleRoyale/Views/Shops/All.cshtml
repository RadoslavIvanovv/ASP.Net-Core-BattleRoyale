@model AllItemsQueryModel

@{
    ViewData["Title"] = "All Items";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="HeroType"></label>
                <select asp-for="HeroType" class="form-control">
                    <option value="">All</option>

                    @foreach (var heroType in Model.HeroTypes)
                    {
                        <option value="@heroType">@heroType</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="ItemType"></label>
                <select asp-for="ItemType" class="form-control">
                    <option value="">All</option>

                    @foreach (var itemType in Model.ItemTypes)
                    {
                        <option value="@itemType">@itemType</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Name</option>
                    <option value="1">Level</option>
                    <option value="2">Hero Type</option>
                    <option value="3">Item Type</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalItems / AllItemsQueryModel.ItemsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Items"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-brand="@Model.HeroType"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Items.Any();
    }
    <div class="col-md-6">
         <a class="btn btn-primary float-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Items"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-brand="@Model.HeroType"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>


<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">All Items</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Item Name</th>
                        <th scope="col">Stats</th>
                        <th scope="col">Price</th>
                        <th scope="col">Item Type</th>
                        <th scope="col">Required Level</th>
                        <th scope="col">Item For</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <th img src="@item.ImageUrl"scope="row" width="50" height="50"></th>
                            <th>@item.Name</th>
                            <td>@item.Stats</td>
                            <td>@item.Price</td>
                            <td>@item.ItemType</td>
                            <td>@item.RequiredLevel</td>
                            <td>@item.HeroType</td>
                            <td>
                                <div class="button-holder">
                                    <a href="/Shops/BuyItem?itemId=@item.Id" class="btn btn-info text-uppercase">Buy Item</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>